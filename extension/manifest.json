{
  "manifest_version": 3,
  "name": "GitHub Context Copilot",
  "version": "0.2.0",
  "description": "Context-aware helper for GitHub Issues.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "GitHub Copilot"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/issues/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
